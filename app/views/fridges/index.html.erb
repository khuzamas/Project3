<h1>Fridge index</h1>
<h1><%= current_user.email %>'s Fridges</h1>

<%= link_to 'Add New Fridge', new_fridge_path %>
<% @fridges.each do |fridge| %>
    <li>
        <%= link_to fridge.name, fridge_path(fridge) %>    
        <%= link_to 'Delete', fridge_path(fridge), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
<% end %>


