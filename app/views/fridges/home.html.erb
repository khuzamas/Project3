<h1>Home Page</h1><br>

<p>Welcome to the Fridge </p>

<% if user_signed_in? %>

<%= form_for @fridge do |f| %>
  <p>
    <%= f.label :name, "Add Fridge Here" %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Fridge index', fridges_path %>
<p>
<%= link_to 'Edit Logged In User', edit_user_registration_path %> <br>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete %> <br> 
<%= link_to 'Delete Account', user_registration_path, method: :delete %></p>

<% else %>
<%= link_to 'Log In', new_user_session_path %> <br> 
<%= link_to "Sign Up", new_user_registration_path %>
<% end %>



